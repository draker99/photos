<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Photos.CommentPage">
	<ContentPage.Content>

    <Grid>
  <Grid.RowDefinitions>
    <RowDefinition Height="5"/>
    <RowDefinition Height="*" />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*" />
  </Grid.ColumnDefinitions>

  <Editor Text="Place your comment here" Grid.Row="1" Grid.Column="0" Completed="SaveComment">
  </Editor>

    <ScrollView Grid.Row="2" Grid.Column="0">              
    <ListView  x:Name="commentLstView">
            <ListView.ItemTemplate >
                <DataTemplate>
                    <ViewCell>                       
                            <Label Text="{Binding Comment}"></Label>                   
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>
  </Grid>
	</ContentPage.Content>
    
</ContentPage>
