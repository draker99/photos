<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Photos.CommentPage">
	<ContentPage.Content>

    <Grid>
  <Grid.RowDefinitions>
    <RowDefinition Height="5" />
    <RowDefinition Height="*" />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*" />
    <ColumnDefinition Width="*" />

                    
  </Grid.ColumnDefinitions>

  <Editor x:Name="editor" Text="Place your comment here" Grid.Row="1" Grid.Column="1">
  </Editor>

  <Image x:Name="i_comment" Grid.Row="1" Grid.Column="0"></Image>
            
            
   <Button Text="Post Comment" Grid.Row="2" Grid.Column="2" Clicked="SaveComment"> </Button>
   </Grid>
	</ContentPage.Content>
    
</ContentPage>
